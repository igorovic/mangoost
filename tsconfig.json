{
  "compilerOptions": {
    "pretty": true,
    "diagnostics": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2018", 
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,                     
    "strict": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "typings/**/*.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
