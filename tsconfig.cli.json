{
  "compilerOptions": {
    "pretty": true,
    "diagnostics": true,
    "outDir": "dist",
    "target": "es2018", 
    "moduleResolution": "node",
    "module": "esnext",                     
    "sourceMap": true,                     
    "strict": true,                          
    "noUnusedLocals": true,                
    "noUnusedParameters": true,                           
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    
  },
  "include": [
    "typings/**/*.d.ts",
    "src",
    "cli"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
